extends index.pug

block content
  style.
    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.3; }
    }
    .blink-animation {
      animation: blink 4s infinite;
    }
    .bg-home-image {
      background-image: url('/assets/images/home.jpg');
    }
    .video-overlay {
      transition: background-color 0.3s ease;
      background-color: rgba(255, 192, 203, 0.3);
    }
    #home-video {
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    #home-video.visible {
      opacity: 1;
    }
    .modal-overlay {
      display: none;
    }
    .modal-overlay.active {
      display: flex;
    }
    .modal-form input[type="password"]:focus {
      outline: none;
      border-color: pink;
    }
    .text-shadow-lg {
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    .text-shadow-xl {
      text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    }
    .world-best-girlfriend {
    font-family: 'Lilita One', sans-serif;
    text-spacing: 0.1em;
      font-size: 3rem;
      font-weight: bold;
      color: #fa99b2;
      text-shadow:
        0 0 8px #8b2f4a,
        0 0 16px #8b2f4a,
        2px 2px 4px rgba(0,0,0,0.5);
    }
  div(class="bg-home-image bg-cover bg-center bg-no-repeat min-h-screen w-full flex flex-col items-center justify-center p-8")
    h1(class="world-best-girlfriend text-5xl mb-8 text-shadow-lg") World's Best Girlfriend
    div(class="relative inline-block max-w-full")
      video(id="home-video" class="max-w-full max-h-[70vh] rounded-lg shadow-lg block" src="/assets/video/home-video.mp4" controls loop)
      div(id="video-overlay" class="video-overlay absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center cursor-pointer rounded-lg z-10")
        div(style="color: #fa99b2;" class="text-3xl font-bold text-shadow-xl pointer-events-none blink-animation") Play Our Song


  script.
    const video = document.getElementById('home-video');
    const overlay = document.getElementById('video-overlay');
    
    overlay.addEventListener('click', () => {
      overlay.classList.add('hidden');
      video.classList.add('visible');
      video.play().then(() => {
        // Add blink animation only after video starts playing
        video.classList.add('blink-animation');
      });
    });
    
   
    